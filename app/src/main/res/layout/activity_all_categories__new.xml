<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.AllCategories_New"
    android:background="#FFFBF1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <!-- Section 1      -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">


            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_icon"
                android:layout_centerVertical="true"
                app:tint="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:tint="@color/black" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:text="Categories Fresh"
            android:fontFamily="@font/brandon_grotesque_black"
            android:padding="10dp"
            android:textAllCaps="true"/>

        <!-- Cards      -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="24dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/category_background_1"
                >
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Subject \nBooks"
                    android:textSize="30sp"
                    android:fontFamily="@font/baloo"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:textColor="@color/black"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_book_icon"
                    android:layout_alignParentRight="true"
                    android:padding="20dp"
                    app:tint="@color/black"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!--    card 2 -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/category_background_2"
                >
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text=" Competitive\n Books"
                    android:textSize="30sp"
                    android:fontFamily="@font/baloo"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:background="#00000000"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_book_old_icon"

                    android:padding="20dp"
                    app:tint="@color/black"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!--    card 3 -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/category_background_3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stationary"
                    android:textSize="30sp"
                    android:fontFamily="@font/baloo"
                    android:padding="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dp"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:text="Expand All"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_stationary_icon"
                    android:layout_alignParentRight="true"
                    android:padding="20dp"
                    app:tint="@color/black"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!--    card 4 -->

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="24dp"
           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/category_background_4"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Gadgets"
                    android:textSize="30sp"
                    android:fontFamily="@font/baloo"
                    android:layout_alignParentRight="true"
                    android:padding="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_electronics_gadgets_icon"
                    app:tint="@color/black" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <!--    card 5 -->

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="24dp"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/category_background_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="30sp"
                android:fontFamily="@font/baloo"
                android:padding="20dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textAlignment="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/general_icon"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                app:tint="@color/black"/>


        </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>