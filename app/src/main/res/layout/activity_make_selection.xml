<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.LoginSignup.MakeSelection"
    android:background="@color/white"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_icon"
            android:padding="5dp"
            app:tint="@color/black" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Make Selection"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:fontFamily="@font/muli_black"
            android:layout_marginTop="10dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your contact detail should we use to reset your password?"
            android:textSize="18sp"
            android:fontFamily="@font/muli"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:layout_marginTop="50dp"
           android:background="@color/lightWihite"
           android:padding="10dp">

           <ImageView
               android:id="@+id/mobile_icon"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:src="@drawable/mobile_custom_icon"
               android:layout_centerVertical="true"
               android:layout_marginRight="20dp"/>

           <TextView
               android:id="@+id/mobile_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Via SMS"
               android:textSize="25sp"
               android:fontFamily="@font/muli"
               android:layout_toRightOf="@id/mobile_icon"
               android:layout_marginTop="30dp"/>

           <TextView
               android:id="@+id/mobile_desc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+91 XXXXX"
               android:textSize="25sp"
               android:fontFamily="@font/muli"
               android:layout_below="@id/mobile_title"
               android:layout_toRightOf="@id/mobile_icon"
               android:textColor="@color/black"
               android:layout_marginTop="30dp"/>

           <Button
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#00000000"/>

       </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@color/lightWihite"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_reset_email"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via Mail"
                android:textSize="25sp"
                android:fontFamily="@font/muli"
                android:layout_toRightOf="@id/mail_icon"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/mail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="support@gmail.com"
                android:textSize="20sp"
                android:fontFamily="@font/muli"
                android:layout_below="@id/mail_title"
                android:layout_toRightOf="@id/mail_icon"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>

        </RelativeLayout>


    </LinearLayout>


</ScrollView>