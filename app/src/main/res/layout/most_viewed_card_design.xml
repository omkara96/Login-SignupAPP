<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:elevation="8dp"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mv_imageView"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/menu_ipen_icon"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itme 1"
            android:layout_toRightOf="@id/mv_imageView"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/brandon_grotesque_black"/>

        <TextView
            android:id="@+id/ms_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 500 Rs"
            android:textSize="18sp"
            android:fontFamily="@font/brandon_grotesque_black"
            android:layout_below="@+id/mv_title"
            android:layout_toRightOf="@+id/mv_imageView"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/mv_desv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jdhf gfdkjghfdjk dlkhjfkjgf dhkfgjhfgkh gkfjhfglijkhfl hikjfgh"
            android:layout_below="@id/ms_price"
            android:layout_toRightOf="@+id/mv_imageView"
            android:layout_marginLeft="10dp"
            android:padding="5dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>